@model GRP.AppWeb.Models.Producto

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("ProductPartial", "Pack")',
            type: 'GET',
        }).success(function (data) {
            $("#ingredientes").html(data);
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
</div>

<div id="ingredientes">

</div>

@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />

            <div class="form-group">
                <label for="nombre" class="control-label col-md-2">Nombre:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", id = "nombre", @readonly = "readonly" } })
                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", id = "nombre", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancelar</button>
        <input class="btn btn-primary" type="submit" value="Agregar" />
    </div>
}

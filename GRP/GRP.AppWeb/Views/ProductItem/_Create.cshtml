@model GRP.AppWeb.Models.ProductoArticulo


<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("ItemPartial", "ProductItem")',
            type: 'GET',
        }).success(function (data) {
            $("#ingredientes").html(data);
        });
    });

    function obtenerDatos() {
        var id = $('input[name="rbArticulo"]:checked').val();
        var url = '@(ConfigurationManager.AppSettings["UrlApi"])';

        var nombre = $('#tblArticulo').find('[type="radio"]:checked').map(function () {
            return $(this).closest('tr').find('td:nth-child(2)').text();
        }).get();
        var medida = $('#tblArticulo').find('[type="radio"]:checked').map(function () {
            return $(this).closest('tr').find('td:nth-child(3)').text();
        }).get();
        var costo = $('#tblArticulo').find('[type="radio"]:checked').map(function () {
            return $(this).closest('tr').find('td:nth-child(4)').text();
        }).get();

        $('#nombre').val(nombre);
        $('#UnidadMedida').val(medida);
        $('#costo').val(costo);

        $.ajax({
            type: 'GET',
            url: url + 'items/' + id + '/info',
            dataType: 'json',
            success: function (data) {
                var json = JSON.parse(JSON.stringify(data));
                $("#Calorias").val(json["Calories"]);
                $("#Proteinas").val(json["Proteins"]);
                $("#Carbohidratos").val(json["Carbohydrates"]);
                $("#Grasas").val(json["Fats"]);
            },
            error: function (data) {
                console.log(data);
            }
        });
    }
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Agregar ingrediente</h4>
</div>

<div id="ingredientes">

</div>

@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdProducto)
            @Html.HiddenFor(model => model.UnidadMedida, new { htmlAttributes = new { id = "UnidadMedida" } })
            <input type="hidden" name="UnidadMedida" id="UnidadMedida" value="@Model.UnidadMedida"/>
            <input type="hidden" name="Calorias" id="Calorias" value="@Model.Calorias" />
            <input type="hidden" name="Proteinas" id="Proteinas" value="@Model.Proteinas" />
            <input type="hidden" name="Carbohidratos" id="Carbohidratos" value="@Model.Carbohidratos" />
            <input type="hidden" name="Grasas" id="Grasas" value="@Model.Grasas" />

            <div class="form-group">
                <label for="nombre" class="control-label col-md-2">Nombre:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", id = "nombre", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="nombre" class="control-label col-md-2">Costo:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control", id = "costo", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="nombre" class="control-label col-md-2">Cantidad:</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="nombre" class="control-label col-md-2">Rendimiento:</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Rendimiento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rendimiento, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancelar</button>
        <input class="btn btn-primary" type="submit" value="Agregar" />
    </div>
}
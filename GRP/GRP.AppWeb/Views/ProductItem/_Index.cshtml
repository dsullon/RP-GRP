@model IEnumerable<GRP.AppWeb.Models.ProductoArticulo>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Ingredientes</strong>
    </div>

    <table class="table table-hover" id="tblIngredientes">
        <tr>
            <th>Ingrediente</th>
            <th>U.M.</th>
            <th>Costo</th>
            <th>Cant.</th>
            <th>Importe</th>
            <th>
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "Create", "ProductItem", routeValues: new { ProductoID = ViewBag.ProductoID }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.UnidadMedida</td>
                <td>@item.Costo</td>
                <td>@item.Cantidad</td>
                <td id="tdCosto">@item.Precio</td>
                <td></td>
            </tr>
        }
    </table>

</div>

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });

        $("a[data-modal]").on("click", function (e) {
            // hide dropdown if any (this is used wehen invoking modal from link in bootstrap dropdown )
            //$(e.target).closest('.btn-group').children('.dropdown-toggle').dropdown('toggle');
            
            var porciones = $('#txtPorciones').val();
            if (isNaN(porciones) || porciones <= 0) {
                return false;
            }

            $('#myModalContent').load(this.href, function () {
                $('#myModal').modal({
                    /*backdrop: 'static',*/
                    keyboard: true
                }, 'show');
                bindForm(this);
            });
            return false;
        });
        calcular();
    });

    function bindForm(dialog) {
        $('form', dialog).submit(function () {
            $.ajax({
                url: this.action,
                type: this.method,
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        $('#myModal').modal('hide');
                        $('#target').html('');
                        $('#target').load(result.url); //  Load data from the server and place the returned HTML into the matched element
                    } else {
                        $('#myModalContent').html(result);
                        bindForm(dialog);
                    }
                }
            });
            return false;
        });
    }
</script>
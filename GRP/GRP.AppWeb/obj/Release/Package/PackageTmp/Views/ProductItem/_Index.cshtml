@model IEnumerable<GRP.AppWeb.Models.ProductoArticulo>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>.</strong>
        @Html.NoEncodeActionLink("Agregar insumos", "Add", "Create", "ProductItem", routeValues: new { ProductoID = ViewBag.ProductoID }, htmlAttributes: new { data_modal = "", @class = "pull-left" })
    </div>    
    <table class="table table-hover" id="tblIngredientes">
        <tr>
            <th class="col-sm-4">Ingrediente</th>
            <th class="col-sm-1">U.M.</th>
            <th class="col-sm-1">Costo</th>
            <th class="col-sm-1">Cant.</th>
            <th class="col-sm-1">Rend.</th>
            <th class="col-sm-1">Importe</th>
            <th class="col-sm-1">Gra.</th>
            <th class="col-sm-1">Cal.</th>
            <th class="col-sm-1">Pro.</th>
            <th class="col-sm-1">Carb.</th>
            <th>                
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.UnidadMedida</td>
                <td>@item.Costo</td>
                <td>@item.Cantidad</td>
                <td id="tdRendimiento">@item.Rendimiento</td>
                <td id="tdImporte">@item.Precio</td>
                <td id="tdGrasa">@item.Grasas</td>
                <td id="tdCaloria">@item.Calorias</td>
                <td id="tdProteina">@item.Proteinas</td>
                <td id="tdCarbohidrato">@item.Carbohidratos</td>
                <td></td>
            </tr>
        }
    </table>

</div>

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });

        $("a[data-modal]").on("click", function (e) {            
            var porciones = $('#txtPorciones').val();
            if (isNaN(porciones) || porciones <= 0) {
                return false;
            }

            $('#myModalContent').load(this.href, function () {
                $('#myModal').modal({
                    keyboard: true
                }, 'show');
                bindForm(this);
            });
            return false;
        });
        calcular();
    });

    function bindForm(dialog) {
        $('form', dialog).submit(function () {
            $.ajax({
                url: this.action,
                type: this.method,
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        $('#myModal').modal('hide');
                        $('#target').html('');
                        $('#target').load(result.url); //  Load data from the server and place the returned HTML into the matched element
                    } else {
                        $('#myModalContent').html(result);
                        bindForm(dialog);
                    }
                }
            });
            return false;
        });
    }
</script>